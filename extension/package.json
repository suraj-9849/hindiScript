{
  "name": "hindiscript-extension",
  "displayName": "HindiScript - Hindi Programming Language",
  "description": "Syntax highlighting and language support for HindiScript - a Hindi-based programming language with .hlang files",
  "version": "0.1.0",
  "publisher": "suraj9849327",
  "author": {
    "name": "Suraj"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/suraj-9849/hindiScript.git"
  },
  "bugs": {
    "url": "https://github.com/suraj-9849/hindiScript/issues"
  },
  "homepage": "https://github.com/suraj-9849/hindiScript#readme",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "hlang",
    "hindi",
    "programming",
    "language",
    "syntax",
    "highlighting"
  ],
  "activationEvents": [
    "onLanguage:hlang"
  ],
  "main": "./client/out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "hlang",
        "aliases": [
          "HLang",
          "hlang"
        ],
        "extensions": [
          ".hlang"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hlang",
        "scopeName": "source.hlang",
        "path": "./syntaxes/hlang.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run compile:client && npm run compile:server",
    "compile:client": "cd client && npm run compile",
    "compile:server": "cd language-server && npm run compile",
    "watch": "npm run watch:client & npm run watch:server",
    "watch:client": "cd client && npm run watch",
    "watch:server": "cd language-server && npm run watch",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
