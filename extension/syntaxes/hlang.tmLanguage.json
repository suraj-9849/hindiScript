{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "HLang",
  "scopeName": "source.hlang",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.hlang",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.hlang",
          "match": "\\b(agar|ya fir|warna|jabtak|dohraye|roko|aage badho|wapas bhejo)\\b"
        },
        {
          "name": "keyword.other.hlang",
          "match": "\\b(ye|firseKaro)\\b"
        },
        {
          "name": "storage.type.hlang",
          "match": "\\b(number|string|bool)\\b"
        },
        {
          "name": "constant.language.hlang",
          "match": "\\b(sahi|galat|khaali)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.hlang",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.hlang",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.hlang",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.hlang",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hlang",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.hlang",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.hlang",
          "match": "(&&|\\|\\|)"
        },
        {
          "name": "keyword.operator.arithmetic.hlang",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.assignment.hlang",
          "match": "="
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "support.function.builtin.hlang",
          "match": "\\b(bol)\\b"
        },
        {
          "name": "entity.name.function.hlang",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.hlang",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
